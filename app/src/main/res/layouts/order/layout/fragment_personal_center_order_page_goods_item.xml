<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5"
        >
        <ImageView
            android:id="@+id/personal_center_order_page_list_goods_images"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_wallet"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/personal_center_order_page_list_goods_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="四川移动话费充值20元"
            android:layout_margin="10dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/personal_center_order_page_list_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_margin="10dp"
                android:text="$200"
                />
            <TextView
                android:id="@+id/personal_center_order_page_list_goods_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_margin="10dp"
                android:text="X1"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>