<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/personal_center_order_page_list_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成都信息工程系"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/personal_center_order_page_list_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易完成"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            />

    </RelativeLayout>
    <ListView
        android:id="@+id/personal_center_order_page_list_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

            <TextView
                android:id="@+id/personal_center_order_page_list_goods_goods_num_total_price"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="共计1件商品，合计100元"
                android:textSize="20sp"
                />
        <View
            android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:background="#d9d9d9"
            />
        <LinearLayout
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/personal_center_order_page_list_button_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除订单"
                android:background=" #FFFFFF"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>