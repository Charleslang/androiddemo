<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qinjie.demo.personal.address.PersonalCenterAddressEditActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:background="#F4F4F4"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/person_center_address_edit_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:src="@drawable/ic_arrow_left"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            />
        <TextView
            android:layout_weight="1"
            android:layout_width="200dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="我的地址"
            android:textSize="30sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:mtf_labelColor="#666"
            android:layout_gravity="center"
            app:mtf_image="@drawable/ic_nickname"
            >
            <EditText
                android:id="@+id/person_center_address_edit_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="姓名"
                android:textColor="#333"
                android:textSize="15sp"
                />
        </com.github.florent37.materialtextfield.MaterialTextField>
        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:mtf_labelColor="#666"
            android:layout_gravity="center"
            app:mtf_image="@drawable/ic_address"
            >
            <EditText
                android:id="@+id/person_center_address_edit_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="手机号"
                android:textColor="#333"
                android:textSize="15sp"
                />
        </com.github.florent37.materialtextfield.MaterialTextField>
        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:mtf_labelColor="#666"
            android:layout_gravity="center"
            app:mtf_image="@drawable/ic_nickname"
            >
            <EditText
                android:id="@+id/person_center_address_edit_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="详细地址"
                android:textColor="#333"
                android:textSize="15sp"
                />
        </com.github.florent37.materialtextfield.MaterialTextField>

    </LinearLayout>
   <LinearLayout
       android:padding="20dp"
       android:layout_marginTop="10dp"
       android:layout_width="match_parent"
       android:orientation="horizontal"
       android:layout_height="wrap_content">
       <Button
           android:id="@+id/person_center_address_edit_default"
           android:layout_weight="1"
           android:gravity="center"
           android:layout_gravity="center_horizontal"
           android:background="@drawable/rounded_corners2"
           android:layout_width="100dp"
           android:layout_height="50dp"
           android:text="设置默认"
           />
       <Button
           android:id="@+id/person_center_address_edit_save"
           android:layout_weight="1"
           android:gravity="center"
           android:layout_gravity="center_horizontal"
           android:background="@drawable/rounded_corners2"
           android:layout_width="100dp"
           android:layout_height="50dp"
           android:text="保存地址"
           />
       <Button
           android:id="@+id/person_center_address_edit_delete"
           android:layout_weight="1"
           android:gravity="center"
           android:layout_gravity="center_horizontal"
           android:background="@drawable/rounded_corners2"
           android:layout_width="100dp"
           android:layout_height="50dp"
           android:text="删除地址"
           />

   </LinearLayout>
</LinearLayout>