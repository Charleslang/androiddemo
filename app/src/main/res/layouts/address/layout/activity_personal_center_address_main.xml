<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4F4F4"
    tools:context="com.qinjie.demo.personal.address.PersonalCenterAddressMainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:background="#F4F4F4"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/person_center_address_image_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:src="@drawable/ic_arrow_left"
            android:layout_gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="200dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="我的地址"
            android:layout_weight="1"
            android:textSize="30sp" />
        <TextView
            android:layout_weight="1"
            android:id="@+id/person_center_address_text_add"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:text="添加新地址"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/person_center_address_recyclerview"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>