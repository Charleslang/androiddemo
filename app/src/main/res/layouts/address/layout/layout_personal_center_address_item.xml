<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_height="150dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <cn.carbs.android.avatarimageview.library.AvatarImageView
            android:id="@+id/layout_personal_center_address_name1"
            android:layout_width="60dp"
            android:src="@drawable/rotate_layout"
            android:layout_height="60dp"
            android:padding="5dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/layout_personal_center_address_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="秦杰"
                android:textSize="25sp"
                />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:id="@+id/layout_personal_center_address_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18780122553"
                android:layout_toRightOf="@+id/layout_personal_center_address_name"
                android:textSize="18sp"
                />
            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/layout_personal_center_address_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="默认"
                android:textColor="#CC6031"
                android:background="#FFF2EC"
                android:textSize="15sp"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/layout_personal_center_address_details"
                android:layout_weight="0.3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="四川成都市成都信息工程大学航空港校区17栋31楼"
                />
            <TextView
                android:id="@+id/layout_personal_center_address_edit"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="编辑"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>