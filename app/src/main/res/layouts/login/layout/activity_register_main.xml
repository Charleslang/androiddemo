<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qinjie.demo.login.RegisterMainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_arrow_left"
            android:id="@+id/login_register_image_return"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="          欢迎注册"
            android:textSize="40sp"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/login_register_image_profile"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_profile"
        />

       <com.github.florent37.materialtextfield.MaterialTextField
           android:layout_width="300dp"
           android:layout_height="wrap_content"
           app:mtf_labelColor="#666"
           android:layout_gravity="center"
           app:mtf_image="@drawable/ic_nickname"
           >
           <EditText
               android:id="@+id/login_register_edittext_nickname"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="昵称"
               android:textColor="#333"
               android:textSize="15sp"
               />
       </com.github.florent37.materialtextfield.MaterialTextField>
    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:mtf_labelColor="#666"
        android:layout_gravity="center"
        app:mtf_image="@drawable/ic_password"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="密码"
            android:id="@+id/login_register_edittext_password"
            android:textColor="#333"
            android:textSize="15sp" />
    </com.github.florent37.materialtextfield.MaterialTextField>
    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:mtf_labelColor="#666"
        android:layout_gravity="center"
        app:mtf_image="@drawable/ic_password"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="再次输入密码"
            android:inputType="textPassword"
            android:id="@+id/login_register_edittext_repassword"
            android:textColor="#333"
            android:textSize="15sp" />
    </com.github.florent37.materialtextfield.MaterialTextField>
    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:mtf_labelColor="#666"
        android:layout_gravity="center"
        app:mtf_image="@drawable/ic_email"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="邮箱"
            android:id="@+id/login_register_edittext_email"
            android:textColor="#333"
            android:textSize="15sp" />
    </com.github.florent37.materialtextfield.MaterialTextField>
    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:mtf_labelColor="#666"
        android:layout_gravity="center"
        app:mtf_image="@drawable/ic_email"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="验证码"
            android:id="@+id/login_register_edittext_code"
            android:textColor="#333"
            android:textSize="15sp" />
    </com.github.florent37.materialtextfield.MaterialTextField>

       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <Button
               android:layout_weight="1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="获取验证码"
               android:id="@+id/login_register_button_code"
               />
           <Button
               android:layout_weight="1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="注册"
               android:id="@+id/login_register_button_register"
               />
       </LinearLayout>
</LinearLayout>