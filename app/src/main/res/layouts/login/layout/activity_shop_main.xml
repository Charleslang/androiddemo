<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeColor">
    <ImageView
        android:id="@+id/main_top_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:src="@drawable/main_shop_icon"
        android:layout_marginTop="80dp"/>
    <ImageView
        android:id="@+id/main_center_img"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_below="@id/main_top_img"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_main"/>
    <ImageView
        android:id="@+id/main_btn_img"
        android:layout_width="160dp"
        android:layout_height="46dp"
        android:layout_below="@id/main_center_img"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/main_shop_btn"
        android:layout_marginTop="80dp"/>

</RelativeLayout>