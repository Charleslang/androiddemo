<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccccc">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/top_title"
        android:id="@+id/pay_result_toptile"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp">
        <TextView
            android:id="@+id/pay_result_success"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="完成"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/pay_result_topcontent"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:text="支付结果"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_below="@id/pay_result_toptile"
        android:background="#ffffff"
        android:id="@+id/pay_result_center">
        <com.dysy.carttest.myui.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:src="@drawable/alipaylogo"
            android:id="@+id/pay_result_img"
            android:layout_marginBottom="10dp"
            android:layout_alignParentTop="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pay_result_zfcg"
            android:text="支付成功"
            android:gravity="center"
            android:layout_below="@id/pay_result_img"
            android:layout_marginTop="3dp"
            android:textSize="16sp"
            android:textColor="@color/themeColor"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pay_result_money"
            android:text="36.00元"
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_below="@id/pay_result_zfcg"
            android:gravity="center"
            android:layout_marginTop="10dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/pay_result_center"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:background="#ffffff"
        android:id="@+id/pay_result_xx">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="付款信息"
            android:textColor="#555555"
            android:textSize="16sp"
            android:gravity="center"
            android:id="@+id/pay_result_fkxx"/>
        <TextView
            android:id="@+id/pay_result_yue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="余额"
            android:textSize="16sp"
            android:textColor="#555555"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/pay_result_fkxx"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:id="@+id/pay_result_rmoney"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="-36.00"
            android:textColor="#555555"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/pay_result_xx"
        android:background="#ffffff"/>

</RelativeLayout>